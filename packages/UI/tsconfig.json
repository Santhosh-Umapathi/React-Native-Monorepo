{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["ES7"],
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "strict": true,
    "target": "ESNext",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true, //Improve performance for runtime enums
    "removeComments": true,
    "disableSizeLimit": true,
    "resolveJsonModule": true,
    "types": ["react-native"],
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "@components": ["components"]
    }
  },
  "include": ["components/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
